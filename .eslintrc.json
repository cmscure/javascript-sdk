{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "globals": {
    "define": "readonly",
    "module": "readonly",
    "exports": "readonly"
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "error",
    "no-console": "off"
  },
  "ignorePatterns": [
    "dist/**/*",
    "node_modules/**/*"
  ]
}
